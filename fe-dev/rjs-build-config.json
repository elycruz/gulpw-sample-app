{
  "appDir": "./js/src/amd-require-js",
  "baseUrl": "./",
  "dir": "../public/js/amd-require-js",
  "optimize": "uglify",
  "mainConfigFile": "./js/src/amd-require-js/init.js",
  "paths": {
    "jquery":       "../../../bower_components/jquery/dist/jquery",
    "modernizr":    "../../../bower_components/modernizr/modernizr",
    "text":         "../../../bower_components/requirejs-text/text"
  },
  "modules": [
    {
      "name": "init",
      "include": ["jquery", "modernizr", "modules/module1/module1"]
    },
    {
      "name": "modules/module1/module1",
      "exclude": ["jquery", "modernizr"]
    }
  ]
}
